<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tv7art.com.tv7art" >

    <!--habilitando el permiso para acceder a conexion de internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--habilitando el permiso para acceder al a informacion del estado de las conexiones -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icono_aplicacion"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PantallaInicialActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_pantalla_inicial"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".DetalleSerieActivity"
            android:label="@string/title_activity_detalle_serie"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>
